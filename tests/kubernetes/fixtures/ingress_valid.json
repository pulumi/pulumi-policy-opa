{
  "kind": "Ingress",
  "metadata": {
    "name": "prod-ingress",
    "annotations": {
      "kubernetes.io/ingress.class": "nginx",
      "cert-manager.io/cluster-issuer": "letsencrypt-prod"
    }
  },
  "spec": {
    "tls": [
      {
        "hosts": ["example.com"],
        "secretName": "example-tls"
      }
    ],
    "rules": [
      {
        "host": "example.com",
        "http": {
          "paths": [
            {
              "path": "/",
              "pathType": "Prefix",
              "backend": {
                "service": {
                  "name": "nginx-service",
                  "port": {
                    "number": 80
                  }
                }
              }
            }
          ]
        }
      }
    ]
  }
}
