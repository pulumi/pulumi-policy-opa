{
  "__name": "secure-nsg",
  "type": "azure-native:network:NetworkSecurityGroup",
  "location": "eastus",
  "securityRules": [
    {
      "name": "allow-ssh-from-vpn",
      "access": "Allow",
      "direction": "Inbound",
      "priority": 100,
      "protocol": "Tcp",
      "sourceAddressPrefix": "10.0.0.0/8",
      "sourcePortRange": "*",
      "destinationAddressPrefix": "*",
      "destinationPortRange": "22"
    },
    {
      "name": "allow-http",
      "access": "Allow",
      "direction": "Inbound",
      "priority": 110,
      "protocol": "Tcp",
      "sourceAddressPrefix": "*",
      "sourcePortRange": "*",
      "destinationAddressPrefix": "*",
      "destinationPortRange": "80"
    }
  ]
}
